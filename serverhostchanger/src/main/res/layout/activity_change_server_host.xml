<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fun.yuner.serverhostchanger.ChangeServerHostActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="default server host : "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/default_server_host_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            tools:text="192.168.4.209" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="current server host : "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/current_server_host_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            tools:text="192.168.4.209" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ip_1_edt"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_ip_edt_bg"
            android:elevation="8dp"
            android:gravity="center"
            android:hint="192"
            android:inputType="number"
            android:maxLength="3"
            android:text="192"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="."
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ip_2_edt"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_ip_edt_bg"
            android:elevation="8dp"
            android:gravity="center"
            android:hint="168"
            android:inputType="number"
            android:maxLength="3"
            android:text="168"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="."
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ip_3_edt"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_ip_edt_bg"
            android:elevation="8dp"
            android:gravity="center"
            android:hint="4"
            android:inputType="number"
            android:maxLength="3"
            android:text="4"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="."
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ip_4_edt"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_ip_edt_bg"
            android:elevation="8dp"
            android:gravity="center"
            android:hint="210"
            android:inputType="number"
            android:maxLength="3"
            android:text="209"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=":"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/port_edt"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_ip_edt_bg"
            android:elevation="8dp"
            android:gravity="center"
            android:hint="8080"
            android:inputType="number"
            android:maxLength="5"
            android:text="8080"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="/"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/server_name_edt"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_ip_edt_bg"
            android:elevation="8dp"
            android:gravity="center"
            android:hint="8080"
            android:inputType="text"
            android:maxLength="10"
            android:minWidth="45dp"
            android:text="serverName"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/set_to_default_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_dark"
        android:text="set to default"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/save_changes_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_bright"
        android:text="save changes"
        android:textColor="@android:color/white" />

</LinearLayout>